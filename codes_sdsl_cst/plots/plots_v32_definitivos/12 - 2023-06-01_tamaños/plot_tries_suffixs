red = "#FF0000"; green = "#00FF00"; blue = "#0000FF"; skyblue = "#87CEEB"; black = "#000000"; darkgreen = "#006400"; darkred = "#8b0000"; gold = "#ffd700";
set grid ytics
set key out horiz
set terminal png size 800,400

set ylabel "Size [KB(log)]"
set xlabel "Number of Paths"

set logscale y
set xrange [0.5:6.5]


set title 'Tama単o naive answers'
set output 'img_size_naive_allanswers.png'
plot 'size_naive_answers' using 3:xtic(1) title 'naive' with linespoints lt 2 pt 7 lc rgb red,   \
     '' using 4 title 'answers' with linespoints lt 2 pt 7 lc rgb blue


set ylabel "Size [MB(log)]"


set title 'Tama単o GST vs Naive vs Tries[d:tripsXL]'
set output 'img_size_naive_vs_gst_vs_tries_trips_xl_log.png'
plot 'size_trips_other_structures' using 8:xtic(1) title 'GST' with linespoints lt 2 pt 7 lc rgb red,   \
     '' using 3 title 'Naive' with linespoints lt 2 pt 7 lc rgb green,   \
     '' using 4 title 'Trie' with linespoints lt 2 pt 7 lc rgb darkred,   \
     '' using 5 title 'TST' with linespoints lt 2 pt 7 lc rgb darkgreen,   \
     '' using 6 title 'suffTST' with linespoints lt 2 pt 7 lc rgb blue,   \
     '' using 7 title 'suffTrieM' with linespoints lt 2 pt 7 lc rgb skyblue



set title 'Tama単o cst vs otros'
set output 'img_size_cst_vs_suffixTST_old.png'
plot 'size_trips_other_structures' using 2:xtic(1) title 'cst' with linespoints lt 2 pt 7 lc rgb red,   \
     '' using 7 title 'suffTST' with linespoints lt 2 pt 7 lc rgb blue,   \
     '' using 8 title 'TrieMap' with linespoints lt 2 pt 7 lc rgb skyblue,   \
     '' using 9 title 'suffTrieMap' with linespoints lt 2 pt 6 lc rgb skyblue,   \
     '' using 4 title 'Naive' with linespoints lt 2 pt 7 lc rgb green,   \
     '' using 10 title 'suffArray' with linespoints lt 2 pt 8 lc rgb green


set output 'img_size_gst_vs_naive_vs_salcpseq_log.png'
set title 'Tama単o cst vs otros'
plot 'size_trips_other_structures' using 3:xtic(1) title 'TRGST' with linespoints lt 2 pt 7 lc rgb blue,   \
     '' using 4 title 'Baseline' with linespoints lt 2 pt 7 lc rgb red,   \
     '' using 11 title 'SA+LCP+Seq' with linespoints lt 2 pt 8 lc rgb green


unset logscale y
set ylabel "Size [MB]"

unset title
set output 'img_size_gst_vs_naive_vs_salcpseq.png'
plot 'size_trips_other_structures' using 3:xtic(1) title 'TRGST' with linespoints lt 2 pt 7 lc rgb blue,   \
     '' using 4 title 'Baseline' with linespoints lt 2 pt 7 lc rgb red,   \
     '' using 11 title 'SA+LCP+Seq' with linespoints lt 0 pt 8 lc rgb green,   \
     '' using 13 title 'gzip' with linespoints lt 2 pt 7 lc rgb darkred

