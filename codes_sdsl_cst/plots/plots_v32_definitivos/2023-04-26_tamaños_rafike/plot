red = "#FF0000"; green = "#00FF00"; blue = "#0000FF"; skyblue = "#87CEEB"; black = "#000000"; darkgreen = "#006400"; darkred = "#8b0000";
set grid ytics
set key out horiz
set terminal png size 800,400

set xrange [0.5:10.5]
set yrange [1:100000000]
set logscale y

set output 'img_size_gst_trips.png'
set title 'Tamaño GST [trips_{1+}]'
set ylabel "Tamaño [B]"
set xlabel "Rutas"
plot 'data_trips' using 3:xtic(1) title 'cst_{sada}' with linespoints lt 2 pt 3 lc rgb red,   \
     'data_trips' using 4 title 'mapR2N' with linespoints lt 2 pt 4 lc rgb green,   \
     'data_trips' using 5 title 'mapN2R' with linespoints lt 2 pt 5 lc rgb darkgreen,   \
     'data_trips' using 6 title 'gstMFSbv' with linespoints lt 2 pt 6 lc rgb darkred,   \
     'data_trips' using 7 title 'gstMNodos' with linespoints lt 2 pt 7 lc rgb blue,   \
     'data_trips' using 8 title 'gstMRamas' with linespoints lt 2 pt 7 lc rgb skyblue

set output 'img_size_gst_trips20+.png'
set title 'Tamaño GST [trips_{20+}]'
set xrange [0.5:5.5]
plot 'data_trips20+' using 3:xtic(1) title 'cst_{sada}' with linespoints lt 2 pt 3 lc rgb red,   \
     'data_trips20+' using 4 title 'mapR2N' with linespoints lt 2 pt 4 lc rgb green,   \
     'data_trips20+' using 5 title 'mapN2R' with linespoints lt 2 pt 5 lc rgb darkgreen,   \
     'data_trips20+' using 6 title 'gstMFSbv' with linespoints lt 2 pt 6 lc rgb darkred,   \
     'data_trips20+' using 7 title 'gstMNodos' with linespoints lt 2 pt 7 lc rgb blue,   \
     'data_trips20+' using 8 title 'gstMRamas' with linespoints lt 2 pt 7 lc rgb skyblue
